@import "nib"
@import "_variables"
@import "_util/mixin"
@import "_util/grid"

global-reset()

input, button
  margin: 0
  padding: 0
  &::-moz-focus-inner
    border: 0
    padding: 0

@font-face
  font-family: FontAwesome
  font-style: normal
  font-weight: normal
  src: url(font-icon-path + ".eot?v=#" + font-icon-version)
  src: url(font-icon-path + ".eot?#iefix&v=#" + font-icon-version) format("embedded-opentype"),
       url(font-icon-path + ".woff?v=#" + font-icon-version) format("woff"),
       url(font-icon-path + ".ttf?v=#" + font-icon-version) format("truetype"),
       url(font-icon-path + ".svg#fontawesomeregular?v=#" + font-icon-version) format("svg")

html, body, #container
  height: 100%

body
  background: color-background
  font: font-size  'Source Sans Pro','Helvetica Neue','Arial','sans-serif',font-yahei
  font-weight: 300
  -webkit-text-size-adjust: 100%

.outer
  clearfix()
  max-width: container-width
  margin: 0 auto

.footer_center
  text-align: center

.left, .alignleft
  float: left

.right, .alignright
  float: right

.clear
  clear: both

#container
  position: relative

.mobile-nav-on
  overflow: hidden

#wrap
  width: 100%
  background: color-background

#container #wrap > .outer
  padding: 0px container-padding
  opacity: 0
  transition: opacity 0.3s ease-in
  &.open
    opacity: 1

#mobile-nav
  display: none

.logo
  display: block
  width: 170px
  font-family: 'Open Sans', "Microsoft Yahei"
  font-weight: bold
  text-decoration: initial
  color: #FFFFFF
  font-size: 2em

if sidebar and sidebar isnt bottom
  #main
    @media mq-normal
      column(main-column)

if sidebar is left
  #main
    float: right

if sidebar is right
  #main
    float: right

@import "_extend"
@import "_partial/header"
@import "_partial/article"
@import "_partial/comment"
@import "_partial/archive"
@import "_partial/footer"
@import "_partial/highlight"
@import "_partial/tablet"
@import "_partial/mobile"
@import "_retina"

if sidebar
  @import "_partial/sidebar"
